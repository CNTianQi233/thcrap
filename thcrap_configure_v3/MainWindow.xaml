<Window x:Class="thcrap_configure_v3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:thcrap_configure_v3"
        mc:Ignorable="d"
        Title="thcrap 配置工具" Height="460" Width="800"
        Loaded="Window_Loaded">
    <xctk:Wizard Name="wizard"
                 FinishButtonClosesWindow="True"
                 BackButtonContent="&lt; 上一步"
                 CanHelp="False"
                 CancelButtonContent="取消"
                 FinishButtonContent="完成"
                 NextButtonContent="下一步 &gt;"
                 HelpButtonVisibility="Hidden">
        <xctk:WizardPage x:Name="IntroPage"
                         Title="欢迎使用 thcrap">
            <Grid>
                <TextBlock>
                此工具可使用 thcrap 为你的游戏打补丁。<LineBreak />
                如果你想使用旧版配置工具，请点击
                <TextBlock Foreground="Blue" TextDecorations="Underline" Cursor="Hand" MouseUp="RunThcrapConfigure">这里</TextBlock>。<LineBreak />
                <LineBreak />
                点击“下一步”继续，或点击“配置设置”修改设置。
            </TextBlock>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    <Button Content="配置设置" Click="SettingsWindow_Open" Padding="3,2" />
                    <Button Content="关于汉化版" Click="AboutChineseVersionWindow_Open" Margin="8,0,0,0" Padding="3,2" />
                </StackPanel>
                <TextBlock Name="VersionText" HorizontalAlignment="Right" VerticalAlignment="Bottom"></TextBlock>
            </Grid>
        </xctk:WizardPage>
        <xctk:WizardPage x:Name="Page1" PageType="Interior"
                         Title="正在初始化"
                         CanSelectNextPage="False" CanSelectPreviousPage="False"
                         Enter="Page1_Enter">
            <StackPanel>
                <TextBlock Text="请稍候..." />
                <ProgressBar Height="17px" IsIndeterminate="True" />
            </StackPanel>
        </xctk:WizardPage>
        <xctk:WizardPage x:Name="Page2" PageType="Interior"
                         PreviousPage="{Binding ElementName=IntroPage}"
                         Title="选择要使用的补丁"
                         Description="不同补丁可以修改游戏中的相同内容（例如翻译、图像、音频等）。">
            <local:Page2 x:Name="Page2Content" />
        </xctk:WizardPage>
        <xctk:WizardPage x:Name="Page3" PageType="Interior"
                         Title="正在下载核心数据"
                         CanSelectNextPage="False" CanSelectPreviousPage="False"
                         Enter="Page3_Enter">
            <local:DownloadPage x:Name="Page3Content" />
        </xctk:WizardPage>
        <xctk:WizardPage x:Name="Page4" PageType="Interior"
                         PreviousPage="{Binding ElementName=Page2}"
                         Title="查找游戏">
            <local:Page4 x:Name="Page4Content" />
        </xctk:WizardPage>
        <xctk:WizardPage x:Name="Page5" PageType="Interior"
                         Title="创建快捷方式"
                         Enter="Page5_Enter" Leave="Page5_Leave">
            <local:Page5 x:Name="Page5Content" />
        </xctk:WizardPage>
        <xctk:WizardPage x:Name="Page6" PageType="Interior"
                         Title="正在下载游戏数据"
                         CanSelectNextPage="False" CanSelectPreviousPage="False"
                         Enter="Page6_Enter">
            <local:DownloadPage x:Name="Page6Content" />
        </xctk:WizardPage>
        <xctk:WizardPage x:Name="LastPage"
                         Title="配置完成"
                         Description="你现在可以通过快捷方式启动已打补丁的游戏。"
                         CanFinish="True"
                         CanCancel="False"
                         CanSelectPreviousPage="False" />
    </xctk:Wizard>
</Window>
