<Window x:Class="thcrap_configure_v3.AboutChineseVersionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="thcrap 关于汉化版"
        Height="320"
        Width="520"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="thcrap 关于汉化版" FontSize="20" FontWeight="Bold" Margin="0,0,0,12" />
            <TextBlock Text="作者：TianQi233" Margin="0,0,0,8" />
            <TextBlock Margin="0,0,0,8">
                <Run Text="哔哩哔哩：" />
                <Hyperlink NavigateUri="https://space.bilibili.com/457047949" RequestNavigate="Hyperlink_RequestNavigate">Instance_TianQi</Hyperlink>
            </TextBlock>
            <TextBlock Margin="0,0,0,14">
                <Run Text="Github：" />
                <Hyperlink NavigateUri="https://github.com/CNTianQi233" RequestNavigate="Hyperlink_RequestNavigate">CNTianQi233</Hyperlink>
            </TextBlock>
            <TextBlock Text="非官方版免责声明：本汉化版与 thcrap 官方项目无隶属关系，仅供学习与交流使用。由使用本版本导致的任何问题或损失，需由使用者自行承担。"
                       TextWrapping="Wrap"
                       Margin="0,0,0,8" />
            <TextBlock Text="维护说明：作者不会长期维护此版本，后续更新与支持不作保证。"
                       TextWrapping="Wrap" />
        </StackPanel>

        <Button Grid.Row="1"
                Content="关闭"
                Width="90"
                Margin="0,16,0,0"
                HorizontalAlignment="Right"
                IsDefault="True"
                Click="CloseButton_Click" />
    </Grid>
</Window>
