<UserControl x:Class="thcrap_configure_v3.Page5"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:thcrap_configure_v3"
             mc:Ignorable="d" 
             d:DesignHeight="460" d:DesignWidth="800">
    <StackPanel>
        <TextBlock>创建快捷方式：</TextBlock>
        <CheckBox Margin="0,7,0,0" Checked="checkbox_Checked" Unchecked="checkbox_Checked" x:Name="checkboxDesktop" IsChecked="True">桌面</CheckBox>
        <CheckBox Margin="0,7,0,0" Checked="checkbox_Checked" Unchecked="checkbox_Checked" x:Name="checkboxStartMenu" IsChecked="True">开始菜单</CheckBox>
        <CheckBox Margin="0,7,0,0" Checked="checkbox_Checked" Unchecked="checkbox_Checked" x:Name="checkboxGamesFolder">游戏目录</CheckBox>
        <CheckBox Margin="0,7,0,0" Checked="checkbox_Checked" Unchecked="checkbox_Checked" x:Name="checkboxThcrapFolder">thcrap 目录</CheckBox>
        <StackPanel Margin="0,7,0,0" Orientation="Horizontal" x:Name="warningPanel" Visibility="Collapsed">
            <Image x:Name="warningImage" Margin="0,0,7,0" Height="14" />
            <TextBlock>你需要通过快捷方式来启动已打补丁的游戏！<TextBlock Foreground="Blue" TextDecorations="Underline" Cursor="Hand" MouseUp="NoShortcutsMoreDetails">更多说明...</TextBlock></TextBlock>
        </StackPanel>
        <StackPanel Margin="0,7,0,0" Orientation="Horizontal" x:Name="shortcutTypePanel" Visibility="Hidden">
            <TextBlock Margin="0,0,7,0">快捷方式类型：</TextBlock>
            <ComboBox x:Name="shortcutType">
                <ComboBoxItem>自动选择（默认）</ComboBoxItem>
                <ComboBoxItem>快捷方式</ComboBoxItem>
                <ComboBoxItem>使用绝对路径的包装器</ComboBoxItem>
                <ComboBoxItem>使用相对路径的包装器</ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </StackPanel>
</UserControl>
